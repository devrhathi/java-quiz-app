<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

      <VBox xmlns="http://javafx.com/javafx/13" xmlns:fx="http://javafx.com/fxml/1" spacing="10" fx:controller="com.ooadproject.quizmaster.QuizMasterDashboardController" fx:id="vbox" style="-fx-background-color: lightblue; -fx-padding: 30 50 30 50;">

    <Label text="Welcome QuizMaster" style="-fx-font-size: 24px;"/>
    <Label text="List Of Quizzes Created:" style="-fx-font-size: 18px;"/>
    <TableView fx:id="quizTable">
        <columns>
            <TableColumn text="ID" fx:id="quizIdColumn" style="-fx-background-color: #0066CD; -fx-text-fill: white;"/>
            <TableColumn text="Quiz Title" fx:id="quizTitleColumn"/> 
            <TableColumn text="Category" fx:id="categoryColumn" style="-fx-background-color: #0066CD; -fx-text-fill: white;"/>
            <TableColumn text="Created On" fx:id="createdOnColumn"/>
        </columns>
    </TableView>
    <Button text="Create Quiz" onAction="#handleCreateQuiz" style="-fx-background-color: green; -fx-font-weight: bold; -fx-text-fill: white;
    -fx-border-radius: 5;
    -fx-padding: 3 6 6 6;
    -fx-font-size: 16px;
    "/>
    <Button text="Back" onAction="#goBack" style="-fx-background-color: darkblue; -fx-font-weight: bold; -fx-text-fill: white;
    -fx-border-radius: 5;
    -fx-padding: 3 6 6 6;
    -fx-font-size: 12px;"/>


</VBox>
